<!DOCTYPE html>
<html class="h-full scroll-smooth" lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Portfolio de Simon Honoré, développeur web">
    <title>Simon Honoré - {% block title %}Portfolio{% endblock %}</title>
    <meta property="og:title" content="Bienvenue sur mon Portfolio">
    <meta property="og:author" content="Simon Honoré">
    <meta property="og:description"
          content="Simon Honoré, développeur web. Voici mon Portfolio où vous pouvez retrouver mes projets et me contacter.">
    <meta property="og:site_name" content="Portfolio - Simon Honoré">
    <meta property="og:url" content="https://simonhonore.fr">
    <meta property="og:image" content="{{ asset('images/portfolio.png') }}">
    <link rel="icon"
          href="{{ asset('/icons/favicon.ico') }}">
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body class="h-full bg-background text-foreground flex flex-col relative">

<twig:Navbar :links="{Présentation: '/#hero', Compétences: '/#skills', Projets: '/#projects', Contact: '/#contact'}"/>

<div class="flex-1 mt-[65px] mt-[73px] flex flex-col">
    {% if app.flashes %}
        <div class="container mx-auto my-4">
            {% include 'partials/flash.html.twig' %}
        </div>
    {% endif %}
    {% block body %}{% endblock %}
</div>

<twig:Footer/>

{% if app.environment == "dev" %}
    {# indicateur screen size tailwind #}
    <div class="fixed bottom-10 left-1 z-50 flex h-6 w-6 items-center justify-center rounded-full bg-gray-800 p-3 font-mono text-xs text-white">
        <div class="block sm:hidden">xs</div>
        <div class="hidden sm:block md:hidden">sm</div>
        <div class="hidden md:block lg:hidden">md</div>
        <div class="hidden lg:block xl:hidden">lg</div>
        <div class="hidden xl:block 2xl:hidden">xl</div>
        <div class="hidden 2xl:block">2xl</div>
    </div>
{% endif %}

</body>
</html>
