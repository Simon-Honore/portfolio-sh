{% extends 'admin/adminBase.html.twig' %}

{% block title %}Technologies{% endblock %}

{% block body %}



    <div class="relative overflow-x-auto container mx-auto my-12 max-w-3xl">
        <h1 class="text-2xl font-bold mb-8">Technologies</h1>

        <table class="w-full text-left text-sm">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 rounded-t-lg">
            <tr>
                <th scope="col" class="px-6 py-3 w-full">
                    Nom de la techno
                </th>
                <th scope="col" class="px-6 py-3">
                    Icône
                </th>
                <th scope="col" class="px-6 py-3">
                    <a href="{{ path('admin_technology_new') }}" class="btn btn-primary">Ajouter</a>
                </th>
            </tr>
            </thead>
            <tbody>
            {% for technology in technologies %}
                <tr class="bg-background border-b border-border hover:bg-gray-50/60">
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
                        {{ technology.name }}
                    </th>
                    <td class="px-6 py-4">
                        <twig:ux:icon name="{{ technology.symfonyUxIconName }}"/>
                    </td>
                    <td class="px-6 py-4 space-y-2">
                        <a href="{{ path('admin_technology_edit', {id: technology.id}) }}"
                           class="text-blue-800 font-medium">Éditer</a>
                        <form action="{{ path('admin_technology_delete', {id: technology.id,}) }}" method="post">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="text-red-800 font-medium">Supprimer</button>
                        </form>
                    </td>


                </tr>
            {% endfor %}


            </tbody>
        </table>
    </div>
{% endblock %}
