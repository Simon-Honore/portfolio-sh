<!DOCTYPE html>
<html class="h-full scroll-smooth" lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SH Admin - {% block title %}{% endblock %}</title>
    <link rel="icon"
          href="{{ asset('/icons/favicon.ico') }}">
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body class="h-full bg-background text-foreground flex flex-col">


<twig:Navbar :links="{Projets: '/admin/project', Technos: '/admin/technology', 'Se dÃ©connecter': '/logout'}"/>

<div class="flex-1 mt-[65px] mt-[73px] flex flex-col">
    <div class="container mx-auto my-4">
        {% include 'partials/flash.html.twig' %}
    </div>
    {% block body %}{% endblock %}
</div>

<twig:Footer/>

{% if app.environment == "dev" %}
    {# indicateur screen size tailwind #}
    <div class="fixed bottom-10 left-1 z-50 flex h-6 w-6 items-center justify-center rounded-full bg-gray-800 p-3 font-mono text-xs text-white">
        <div class="block sm:hidden">xs</div>
        <div class="hidden sm:block md:hidden">sm</div>
        <div class="hidden md:block lg:hidden">md</div>
        <div class="hidden lg:block xl:hidden">lg</div>
        <div class="hidden xl:block 2xl:hidden">xl</div>
        <div class="hidden 2xl:block">2xl</div>
    </div>
{% endif %}

</body>
</html>
