<div{{ attributes }} class="border border-border bg-card text-card-foreground py-4 px-8 rounded-lg w-[300px] mx-auto">
    <h5 class="mb-2 text-2xl font-bold uppercase text-center opacity-80">
        {{ cardTitle }}
    </h5>
    <ul class="space-y-2 font-medium text-lg">
        {% for name, icon in skills %}
            <li class="flex gap-2 items-center">
                <twig:ux:icon name="{{ icon }}" class="size-6"/>
                {{ name }}
            </li>
        {% endfor %}

    </ul>
</div>
